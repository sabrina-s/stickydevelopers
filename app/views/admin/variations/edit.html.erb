<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <%= simple_form_for @variation, url: admin_variation_path(id: @variation.id) do |v| %>
      <%= v.input :label %>
      <%= v.input :price %>
      <%= v.input :stock %>
      <%= v.button :submit, class: "button" %>
    <% end %>
  </div>

  <div class="row">
    <li><%= link_to "Back", admin_product_path(@product.slug) %></li>
  </div>
</div>
