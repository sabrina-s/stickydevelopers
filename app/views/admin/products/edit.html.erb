<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <%= simple_form_for @product, url: admin_product_path(slug: @product.slug) do |product| %>
      <%= product.input :name %>
      <%= product.input :description %>
      <%= product.input :slug %>
      <%= product.button :submit, class: "button" %>
    <% end %>
  </div>

  <div class="row">
    <li><%= link_to "Back", admin_product_path(slug: @product.slug) %></li>
  </div>
</div>
