<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <%= simple_form_for @product, url: admin_product_path(slug: @product.slug) do |p| %>
      <%= p.input :name %>
      <%= p.input :description %>
      <%= p.input :slug %>
      <% if @product.photo %>
        <%= image_tag @product.photo.url %>
      <% else %>
        <%= p.file_field :photo %>
      <% end %>
      <%= p.button :submit, class: "button" %>
    <% end %>
  </div>

  <div class="row">
    <li><%= link_to "Back", admin_product_path(slug: @product.slug) %></li>
  </div>
</div>
