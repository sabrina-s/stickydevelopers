<div class="col-md-10 col-md-offset-1">
  <div class="col-md-12">
  </div>

  <div class="col-md-6">
    <div style="display: flex; justify-content: center; align-items: center;">
      <div class="panel panel-default">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:400px; height: 300px;">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag @product.photo.url %>
            </div>

            <div class="item">
              <img src="chicago.jpg" alt="Chicago">
            </div>

            <div class="item">
              <img src="ny.jpg" alt="New York">
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <h1>
      <%= @product.name %>
    </h1>
    <h2>Info</h2>
    <%= @product.description %>
    <h2>Variation</h2>
    <%= simple_form_for @current_cart.user_cart_items.build, url: shop_cart_path do |f| %>
      <%= f.input :variation_id, collection: @product.variations, label_method: :label %>
      <%= f.input :amount, collection: (1..20) %>
      <%= f.button :submit, "Add to Cart"%>
    <% end %>
  </div>

</div>
