<% @products.each do |product| %>
  <div class="col-md-4">
    <div class="panel panel-default">

      <div class="panel-heading">
        <%= product.name %>
      </div>

      <div class="panel-body">
        <%= product.description %>
        <%= link_to "More Details", shop_product_path(product.slug) %>
      </div>
      <div class="panel-footer">
      </div>

    </div>
  </div>
<% end %>
