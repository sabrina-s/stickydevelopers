<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Orders", shop_orders_path %></li>

        <% if !user_signed_in? %>
          <% if admin_signed_in? %>
          <li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "Admin", new_admin_session_path %></li>
          <% end %>
        <% end %>

        <% if !admin_signed_in? %>
          <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
          <% end %>
        <% end %>

        <li><%= link_to "Products", shop_products_path %></li>

        <% if admin_signed_in? %>
          <li><%= link_to "Manage Inventory", admin_products_path %></li>
        <% end %>
        <li>
          <%= form_tag search_shop_products_path, method: :get, class: "navbar-form navbar-right" do %>
            <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder: "Search", class: 'form-control' %>
            <%= submit_tag "Search", :name => nil, class: 'btn btn-default' %>
            </div>
          <% end %>
        </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
      <%= link_to 'Cart', "#", { class: "dropdown-toggle", "data-toggle": "dropdown" }%>
        <ul class="dropdown-menu" id="cart-dropdown">
          <%= render partial: 'layouts/cart-dropdown', locals: { cart: @current_cart } %>
        </ul>
      </li>
      <% if user_signed_in? %>
        <li class="dropdown">
          <%= link_to "Welcome #{current_user.username}", "#", { class: "dropdown-toggle", "data-toggle": "dropdown" }%>
            <ul class="dropdown-menu">
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Address Book', addresses_path %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            </ul>
        </li>
      <% end %>
    </ul>

  </div>
</div>
