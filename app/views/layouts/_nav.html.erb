<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to "Home", root_path %></li>
      <li></li>
      <% if user_signed_in? %>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Sign In", new_user_session_path %></li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
      <%= link_to 'Cart', "#", { class: "dropdown-toggle", "data-toggle": "dropdown" }%>
        <ul class="dropdown-menu" id="cart-dropdown">
          <% if @current_cart.variations.present? %>
            <% @current_cart.variations.each do |variation| %>
              <li><%= variation.product.name %> x <%= variation.amount %></li>
            <% end %>
          <% else %>
            <center>
            <li> Cart is empty.. </li>
            <li><%= link_to 'View Cart', '#' %></li>
            </center>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
</div>
